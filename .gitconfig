[alias]
l = log --format='%C(auto,yellow nobold)%h%Creset %s %C(auto,black bold)(%cr)%Creset' -20
b = branch --list
d = diff
ds = diff --staged
s = status -sb
sl = stash list --format='%C(auto,yellow nobold)%gd%Creset %gs %C(auto,black bold)(%cr)%Creset'
snap = !git stash save "snapshot: $(date)" && git stash apply 'stash@{0}'
tree = log --graph --pretty=oneline --abbrev-commit --decorate
build-num = "!f() { \
  commit=$(git rev-list HEAD | tail -n${1-+0} | head -n1); \
  count=$(git rev-list --count $commit); \
  git log --format='%C(auto,red bold)'$count' %C(auto,yellow nobold)%h%Creset %s %C(auto,black bold)(%cr)%Creset' -1 $commit; \
}; f"

[core]
editor = vim +1
pager = less -XFR
autocrlf = input
longpaths = false

[color]
diff = always
ui = always

[diff]
tool = difftool
algorithm = histogram

[difftool]
prompt = false

[difftool.difftool]
cmd = difftool $LOCAL $REMOTE

[push]
default = simple

