#!/usr/bin/env bash

DATE=/usr/bin/date
if [ ! -x "$DATE" ]; then
  DATE=$(which date)
fi
if $DATE -v1d >/dev/null 2>&1; then
  DATEOPT="-v"
  DATEOPT_DEFAULT="-v1d -v1m -v1970y"
else
  DATEOPT="-d"
  DATEOPT_DEFAULT="-d 1970-01-01"
fi

SORT=/usr/bin/sort
if [ ! -x "$SORT" ]; then
  SORT=$(which sort)
fi

adjust=${@/#/$DATEOPT}
after=`$DATE ${adjust:=$DATEOPT_DEFAULT} "+%b %d %Y"`
git log --format="author %aE" --no-merges --numstat -C --after="$after" | \
    awk --posix "/^author/ {
        commit[i=\$2]+=1
        next
    } NF==3 {
        add[i]+=\$1
        del[i]+=\$2
    } END {
        for (i in commit) {
            split(i, author, \"[@+]\")
            printf(\"[33m%-20s[m %4d commits since $after, +%d, -%d\n\", \
                author[1], \
                commit[i], \
                add[i], \
                del[i])
        }
    }" | \
    $SORT -k3 -nr

